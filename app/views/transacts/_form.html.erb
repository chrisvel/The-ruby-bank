<%= form_for(@transact) do |f| %>
  <% if @transact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transact.errors.count, "error") %> prohibited this transact from being saved:</h2>

      <ul>
      <% @transact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :from_user_id %><br>
    <%= f.number_field :from_user_id, placeholder: current_user.id, disabled: true, value: current_user.id %>
    <input type="hidden" name="transact[from_user_id]" value="<%= current_user.id %>">
  </div>
  <div class="field">
    <%= f.label :to_user_id %><br>
    <%= f.select(:to_user_id,
      @users.map{ |s| [s.id] },
      {}
      ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

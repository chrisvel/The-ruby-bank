<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.account.balance.to_f %></td>
        <td><%= link_to 'Show', user %> : <%= link_to 'Transfer', new_transact_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
